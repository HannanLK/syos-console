<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="syos-persistence-unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entity Classes -->
        <class>com.syos.infrastructure.persistence.UserEntity</class>
        <class>com.syos.infrastructure.persistence.entities.ItemMasterFileEntity</class>
        <class>com.syos.infrastructure.persistence.entities.BrandEntity</class>
        <class>com.syos.infrastructure.persistence.entities.CategoryEntity</class>
        <class>com.syos.infrastructure.persistence.entities.SupplierEntity</class>
        <class>com.syos.infrastructure.persistence.entities.BatchEntity</class>
        <class>com.syos.infrastructure.persistence.entities.WarehouseStockEntity</class>
        <class>com.syos.infrastructure.persistence.entities.ShelfStockEntity</class>
        <class>com.syos.infrastructure.persistence.entities.WebInventoryEntity</class>
        <class>com.syos.infrastructure.persistence.entities.TransactionEntity</class>
        <class>com.syos.infrastructure.persistence.entities.TransactionItemEntity</class>
        <class>com.syos.infrastructure.persistence.entities.BillEntity</class>
        
        <!-- Promotion entities -->
        <class>com.syos.infrastructure.persistence.entities.PromotionEntities$PromotionEntity</class>
        <class>com.syos.infrastructure.persistence.entities.PromotionEntities$PromotionItemEntity</class>
        <class>com.syos.infrastructure.persistence.entities.PromotionEntities$PromotionBatchEntity</class>
        
        <properties>
            <!-- Database Connection Properties -->
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/syosdb"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="apiit-LV6"/>
            
            <!-- Hibernate Properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="false"/>
            
            <!-- Connection Pool Properties -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            
            <!-- Performance Properties -->
            <property name="hibernate.jdbc.batch_size" value="25"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
            <property name="hibernate.jdbc.batch_versioned_data" value="true"/>
            
            <!-- Logging Properties -->
            <property name="hibernate.generate_statistics" value="false"/>
            
            <!-- Schema Validation -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            
            <!-- Timezone -->
            <property name="hibernate.jdbc.time_zone" value="Asia/Colombo"/>
        </properties>
    </persistence-unit>
</persistence>
