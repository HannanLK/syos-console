<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <!-- ================================================================ -->
    <!-- CONFIGURATION PROPERTIES                                        -->
    <!-- ================================================================ -->

    <!-- System Properties -->
    <property name="APP_NAME" value="syos"/>
    <property name="LOG_HOME" value="${LOG_HOME:-D:/4th_final/sem1/clean_cod/syos/syos-console/logs}"/>
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}"/>
    <property name="CONSOLE_LOGGING" value="${CONSOLE_LOGGING:-false}"/>
    <property name="APP_ENV" value="${APP_ENV:-production}"/>

    <!-- Log Patterns -->
    <property name="CONSOLE_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n"/>
    <property name="FILE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%file:%line] - %msg%n"/>
    <property name="AUDIT_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} | %msg%n"/>
    <property name="PERFORMANCE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %msg%n"/>

    <!-- ================================================================ -->
    <!-- CONSOLE APPENDER                                                -->
    <!-- ================================================================ -->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>${LOG_LEVEL}</level>
        </filter>
    </appender>

    <!-- ================================================================ -->
    <!-- FILE APPENDERS                                                  -->
    <!-- ================================================================ -->

    <!-- Main Application Log -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>50MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Error Log File -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Debug Log File (Development Only) -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-debug.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ================================================================ -->
    <!-- SPECIALIZED APPENDERS                                           -->
    <!-- ================================================================ -->

    <!-- Audit Log File -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-audit.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${AUDIT_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Performance Log File -->
    <appender name="PERFORMANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-performance.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-performance.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${PERFORMANCE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Transaction Log File -->
    <appender name="TRANSACTION_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-transactions.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-transactions.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>365</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- SQL Log File (Development/Debugging) -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APP_NAME}-sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APP_NAME}-sql.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ================================================================ -->
    <!-- ASYNC APPENDERS FOR PERFORMANCE                                 -->
    <!-- ================================================================ -->

    <appender name="ASYNC_APP_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="APP_FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
    </appender>

    <appender name="ASYNC_ERROR_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="ERROR_FILE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
    </appender>

    <appender name="ASYNC_AUDIT_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="AUDIT_FILE"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- ================================================================ -->
    <!-- SPECIALIZED LOGGERS                                             -->
    <!-- ================================================================ -->

    <!-- Audit Logger -->
    <logger name="audit" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_AUDIT_FILE"/>
    </logger>

    <!-- Performance Logger -->
    <logger name="performance" level="INFO" additivity="false">
        <appender-ref ref="PERFORMANCE_FILE"/>
    </logger>

    <!-- Transaction Logger -->
    <logger name="transaction" level="INFO" additivity="false">
        <appender-ref ref="TRANSACTION_FILE"/>
    </logger>

    <!-- SQL Logger (Development) -->
    <logger name="sql" level="DEBUG" additivity="false">
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <!-- ================================================================ -->
    <!-- APPLICATION LOGGERS                                             -->
    <!-- ================================================================ -->

    <!-- SYOS Application Loggers -->
    <logger name="com.syos" level="INFO"/>
    <logger name="com.syos.domain" level="INFO"/>
    <logger name="com.syos.application" level="INFO"/>
    <logger name="com.syos.adapter" level="INFO"/>
    <logger name="com.syos.infrastructure" level="INFO"/>

    <!-- Suppress noisy auth logs during build/tests -->
    <logger name="com.syos.application.usecases.auth.LoginUseCase" level="WARN"/>
    <logger name="com.syos.application.usecases.auth.RegisterCustomerUseCase" level="WARN"/>

    <!-- Domain Events -->
    <logger name="com.syos.domain.events" level="DEBUG"/>

    <!-- Security and Authentication -->
    <logger name="com.syos.infrastructure.security" level="WARN"/>

    <!-- Business Logic -->
    <logger name="com.syos.application.usecases" level="INFO"/>

    <!-- ================================================================ -->
    <!-- FRAMEWORK LOGGERS                                               -->
    <!-- ================================================================ -->

    <!-- Hibernate Loggers -->
    <logger name="org.hibernate" level="WARN"/>
    <!-- Explicitly suppress Hibernate ORM subpackage noise in console -->
    <logger name="org.hibernate.orm" level="WARN"/>
    <logger name="org.hibernate.orm.connections.pooling" level="WARN"/>
    <logger name="org.hibernate.SQL" level="ERROR" additivity="false">
        <appender-ref ref="SQL_FILE"/>
    </logger>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="WARN"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicExtractor" level="WARN"/>
    <logger name="org.hibernate.engine.QueryParameters" level="WARN"/>
    <logger name="org.hibernate.engine.query.HQLQueryPlan" level="WARN"/>
    <logger name="org.hibernate.stat" level="INFO"/>

    <!-- Connection Pool -->
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="com.zaxxer.hikari.HikariConfig" level="WARN"/>
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="WARN"/>

    <!-- Database Driver -->
    <logger name="org.postgresql" level="WARN"/>
    <logger name="org.postgresql.Driver" level="WARN"/>

    <!-- Testing Frameworks -->
    <logger name="org.junit" level="WARN"/>
    <logger name="org.mockito" level="WARN"/>
    <logger name="org.testcontainers" level="INFO"/>

    <!-- ================================================================ -->
    <!-- ENVIRONMENT-SPECIFIC CONSOLE CONFIGURATION                      -->
    <!-- ================================================================ -->
    
    <!-- Development Mode: Console + File Logging -->
    <if condition='property("CONSOLE_LOGGING").equals("true")'>
        <then>
            <logger name="ROOT_DEV" level="${LOG_LEVEL}">
                <appender-ref ref="CONSOLE"/>
                <appender-ref ref="ASYNC_APP_FILE"/>
                <appender-ref ref="ASYNC_ERROR_FILE"/>
            </logger>
        </then>
    </if>

    <!-- ================================================================ -->
    <!-- ROOT LOGGER                                                     -->
    <!-- ================================================================ -->

    <root level="${LOG_LEVEL}">
        <!-- Console logging only in development mode -->
<!--        <if condition='property("CONSOLE_LOGGING").equals("true")'>-->
<!--            <then>-->
<!--                <appender-ref ref="CONSOLE"/>-->
<!--            </then>-->
<!--        </if>-->
        
        <!-- Always log to files -->
        <appender-ref ref="ASYNC_APP_FILE"/>
        <appender-ref ref="ASYNC_ERROR_FILE"/>
    </root>

</configuration>